{
    "name": "test-ci-cd-demo",
    "version": "1.0.0",
    "description": "Simple REST API with SQLite",
    "main": "src/app.js",
    "type": "module",
    "scripts": {
        "start": "node src/app.js",
        "dev": "nodemon src/app.js",
        "test": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "coverage": "nyc mocha test/**/*.test.js --exit"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.6",
        "express": "^4.18.2",
        "express-rate-limit": "^7.5.0",
        "express-validator": "^7.2.1",
        "sequelize": "^6.31.0",
        "sqlite3": "^5.1.6",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "eslint": "^9.x.x",
        "globals": "^15.14.0",
        "jest": "^29.5.0",
        "nodemon": "^3.x.x",
        "supertest": "^7.x.x"
    },
    "jest": {
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    }
}
